

server {
  listen      *:3000;

  server_name {{ app }};
  root        /var/www/{{ app }}/public;

  access_log  /var/log/nginx/{{ app }}.log;

  client_max_body_size 10000k;

  location / {
    proxy_pass http://app_url:3000;
    root      /var/www/{{ app }}/public;
    index     index.html;
  }
}
